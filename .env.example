# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (Vercel Postgres)
# Vercel Postgres provides `POSTGRES_URL` (pooled) and `POSTGRES_URL_NON_POOLING` (direct).
# This app also supports `DATABASE_URL` (e.g. for local tooling/Drizzle Kit).
POSTGRES_URL=
POSTGRES_URL_NON_POOLING=
DATABASE_URL=

# Optional: run DB migrations automatically on Vercel production deploys (recommended)
MIGRATE_ON_DEPLOY=true

# Eligibility
STRIKE_LIMIT=3
CREATOR_MIN_FOLLOWERS=1000
CREATOR_MAX_FOLLOWERS=5000

# Auth (magic links)
# Email sending uses Resend when configured; otherwise `/api/auth/request` will fail with `Email not configured`.
RESEND_API_KEY=
RESEND_FROM=
AUTH_EMAIL_FROM=

# Auth policy
# If false, users must sign in via Instagram/TikTok OAuth (email is collected after social login).
AUTH_ENABLE_MAGIC_LINK=false

# Billing (Stripe for US)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_US_BRAND=
STRIPE_PRICE_US_CREATOR=

# Billing (Razorpay for India)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=
RAZORPAY_PLAN_IN_BRAND=
RAZORPAY_PLAN_IN_CREATOR=

# Observability / alerts (optional)
LOG_LEVEL=info
ALERT_EMAIL_TO=
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.05

# Shopify
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_SCOPES=read_products,read_orders,write_orders,read_fulfillments,write_price_rules,write_discounts,write_webhooks
SHOPIFY_API_VERSION=2025-01
SHOPIFY_APP_URL=

# Attribution defaults
DEFAULT_CREATOR_DISCOUNT_PERCENT=10

# Meta / Instagram
META_APP_ID=
META_APP_SECRET=
META_API_VERSION=v20.0
META_PROFILE_STALE_DAYS=7

# TikTok
TIKTOK_CLIENT_ID=
TIKTOK_CLIENT_SECRET=
# Optional: override redirect URI when TikTok's app settings require an exact match.
TIKTOK_REDIRECT_URL=

# YouTube (Google OAuth)
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
# Optional: override redirect URI when Google Cloud OAuth settings require an exact match.
YOUTUBE_REDIRECT_URL=

# Rate limits (defaults are safe for beta)
RATE_LIMIT_AUTH_PER_IP_PER_HOUR=20
RATE_LIMIT_AUTH_PER_EMAIL_PER_HOUR=8
RATE_LIMIT_CLAIMS_PER_CREATOR_PER_MINUTE=12
RATE_LIMIT_CLAIMS_PER_IP_PER_MINUTE=30
RATE_LIMIT_REDIRECTS_PER_MINUTE=120

# Twilio (optional: SMS / WhatsApp)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
TWILIO_WHATSAPP_FROM=

# Crypto (32+ bytes, base64 recommended)
TOKEN_ENCRYPTION_KEY=
